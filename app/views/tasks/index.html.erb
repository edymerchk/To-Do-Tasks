<table id="results" class="table table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Priority</th>
    <th>Dute date</th>    
    <th>Actions</th>
  </tr>

  <% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.priority %></td>
    <td><%= task.due_date %></td>
    <td>
      <%= link_to image_tag("edit.png", size:"20x20"), edit_user_task_path(current_user,task), :class =>"edit" %>
      <%= link_to image_tag("destroy.png", size:"20x20"), user_task_path(current_user,task), :class =>"delete" %>
    </td>

    
  </tr>
  <% end %>
</table>


<%= render 'new' %>