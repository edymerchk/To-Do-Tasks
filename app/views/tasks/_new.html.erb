
<a id="new_task_btn"href="#myModal" role="button" class="btn btn-primary" data-toggle="modal">New Task</a>
<div id="myModal" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

		<h3><span id="new_update">Create</span>Task</h3>

	</div>
	<%= simple_form_for([current_user,@task],  :html => {:class => 'form-horizontal' }) do |f| %>
	<div class="modal-body">
		

		<%= hidden_field_tag 'act' %>
		<%= f.input :name, required: true %>
		<%= f.input :priority, collection: ['Alta','Media','Baja'],  include_blank: false %>


		<%= f.input :due_date, :as => :string, :class => "datepicker", required: true%>

	</div>
	<div class="modal-footer">
		<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		<%= f.button :submit, "Create", :class =>"btn btn-primary save" %>    
	</div>
	<%end%> 
</div>